BoxLayout:
    orientation: 'vertical'
    BoxLayout:
        size_hint_y: 0.25
        orientation: 'horizontal'
        TextInput:
            id: input_miles
            text: ''
            font_size: 48
        BoxLayout:
            orientation: 'vertical'
            size_hint_x: 0.25
            Button:
                text: 'Up'
                on_press: app.handle_increment(1)
            Button:
                text: 'Down'
                on_press: app.handle_increment(-1)

    Button:
        size_hint_y: 0.2
        text: 'Convert m to km'
        on_press: app.handle_calculate()
    Label:
        size_hint_y: 0.2
        id: output_label
        font_size: 48
        text: '54.717'
        color: (1, 1, 0, 1)
